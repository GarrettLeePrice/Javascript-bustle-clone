{{#if updateStoryForm}}
  <h1>Update {{story.title}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="update-author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="update-title" placeholder=story.title}}
      </div>

      <div class="form-group">
        <label for="info">Story</label>
        {{input value=info id="update-story" placeholder=story.title}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="update-image"}}
      </div>

      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateStoryForm'}}>Update Story</button>
{{/if}}
